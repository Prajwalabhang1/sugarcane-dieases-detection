# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_CONFIG=production

# Security - CHANGE THESE IN PRODUCTION!
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=2

# Iframe Embedding Security
# Comma-separated list of domains allowed to embed this app
# Examples: https://yourdomain.com,https://www.yourdomain.com
# Use * to allow all domains (NOT RECOMMENDED for production)
ALLOWED_IFRAME_PARENTS=*

# Model Configuration (paths are relative to /app in container)
MODEL_PATH=/app/models/Final_Model.keras
CLASS_MAPPING_PATH=/app/models/class_mapping.json
DISEASE_SOLUTIONS_PATH=/app/models/disease_solutions.json

# Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Optional: Database (if using full stack deployment)
# DATABASE_URL=postgresql://user:password@postgres:5432/sugarcane_db

# Optional: Redis Cache (if using full stack deployment)
# REDIS_URL=redis://redis:6379/0
