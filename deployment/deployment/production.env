# ऊस एकरी १०० टन - Production Environment Configuration
# Secure configuration for Chordz Technologies deployment

# Application Settings
ENVIRONMENT=production
APP_NAME="ऊस एकरी १०० टन"
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
MAX_WORKERS=4
WORKER_TIMEOUT=120

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
ALLOWED_HOSTS=sugarcane.chordz.tech,api.chordz.tech,localhost

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Database Configuration
DATABASE_URL=postgresql://sugarcane_user:secure_password@postgres:5432/sugarcane_prod
POSTGRES_DB=sugarcane_prod
POSTGRES_USER=sugarcane_user
POSTGRES_PASSWORD=secure_password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# Redis Configuration  
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_secure_password
CACHE_TTL=3600

# AI Model Configuration
MODEL_PATH=/app/models/sugarcane_disease_model.h5
MODEL_VERSION=v1.0.0
PREDICTION_TIMEOUT=30
MAX_IMAGE_SIZE=16777216
SUPPORTED_FORMATS=jpg,jpeg,png,bmp

# File Storage
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=16MB
TEMP_DIR=/tmp/sugarcane

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_TELEMETRY=true
LOG_FILE=/app/logs/sugarcane.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# External Services
WEATHER_API_KEY=your-weather-api-key
SMS_API_KEY=your-sms-api-key
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=support@chordz.tech
EMAIL_PASSWORD=app-specific-password

# Performance Optimization
ENABLE_GZIP=true
ENABLE_CORS=true
CORS_ORIGINS=https://sugarcane.chordz.tech,https://www.chordz.tech
RATE_LIMIT_PER_MINUTE=60
CACHE_MIDDLEWARE=true

# Regional Settings
DEFAULT_LANGUAGE=marathi
SUPPORTED_LANGUAGES=marathi,hindi,english
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_OFFLINE_MODE=true
ENABLE_EXPERT_CONSULTATION=true
ENABLE_COST_ESTIMATION=true
ENABLE_WHATSAPP_INTEGRATION=false

# Grafana Configuration
GRAFANA_PASSWORD=grafana_admin_password

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# Notification Settings
ADMIN_EMAIL=admin@chordz.tech
ALERT_EMAIL=alerts@chordz.tech
NOTIFICATION_FROM_EMAIL=noreply@chordz.tech

# Regional Support Centers
MAHARASHTRA_HELPLINE=1800-XXX-XXXX
KARNATAKA_HELPLINE=1800-YYY-YYYY
UP_HELPLINE=1800-ZZZ-ZZZZ

# Government Integration
AGRICULTURE_DEPT_API=https://api.agriculture.gov.in
WEATHER_DEPT_API=https://api.imd.gov.in
INSURANCE_API=https://api.pmfby.gov.in

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token
HOTJAR_ID=your_hotjar_id

# Content Delivery
CDN_URL=https://cdn.chordz.tech
STATIC_URL=https://static.chordz.tech
MEDIA_URL=https://media.chordz.tech

# Development & Testing (only for staging)
# DEV_DATABASE_URL=postgresql://dev_user:dev_pass@localhost:5432/sugarcane_dev
# TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/sugarcane_test
# ENABLE_DEBUG_TOOLBAR=false

